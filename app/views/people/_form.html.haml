= form_for @person do |f|
  -if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :f_name
    = f.text_field :f_name
  .field
    = f.label :l_name
    = f.text_field :l_name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :phone_num
    = f.text_field :phone_num
  .actions
    = f.submit 'Save'
