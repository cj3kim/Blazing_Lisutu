
.index_container
  %br
  %br
  %br
  %h1 Address Book 

  %table
    %tr
      %th F name
      %th L name
      %th Address
      %th Phone num
      %th Delete
      %th Show 

    -@people.each do |p|
      %tr{ class:'person', id: p.id }
        %td{ class: 'f_name'}= p.f_name
        %td{ class: 'l_name'}= p.l_name
        %td{ class: 'address'}= p.address
        %td{ class: 'phone_num'}= p.phone_num
        %td= link_to 'Delete', p, :confirm => 'Are you sure?', :method => :delete
        %td{class:'drop_down'} 
          =image_tag("arrow_left.png")
  %br
  %center{ id:'new_person'}
    =link_to 'New ', new_person_path, id: 'new_person'
